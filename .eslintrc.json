{
  "extends": ["react-app", "react-app/jest", "prettier"],
  "rules": {
    "semi": ["warn", "always"],
    "eqeqeq": "error",
    "max-lines": [
      1,
      {
        "max": 200
      }
    ],

    "max-params": [
      1,
      {
        "max": 5
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
